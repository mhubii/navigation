# Add external library orb slam2.
cmake_minimum_required(VERSION 3.11 FATAL_ERROR)

project(orb_slam2_download NONE)

include(ExternalProject)
ExternalProject_Add(orb_slam2
    GIT_REPOSITORY https://github.com/raulmur/ORB_SLAM2.git
    GIT_TAG master
    SOURCE_DIR "${CMAKE_BINARY_DIR}/orb_slam2"
    BINARY_DIR "${CMAKE_BINARY_DIR}/orb_slam2/build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
)
